
/**app.wxss**/
.flex-wrap{
  display: flex;
  flex-direction: row;
}

page {
  background-color: #f2f2f2;
}

.tappable:hover {
  opacity: .6;
}

.container {
  padding: 0px 12px;
}
.form-wrap {
  border-top: 1px solid #eee;
  margin: 12px 0;
}

.hint,
.error {
  display: block;
  margin: 8px 0;
  color: #888;
  font-size: 14px;
}
.error {
  color: #e64240;
}

.outputarea {
  margin: 30rpx;
  display: flex;
  flex-direction:row;
}
.list{
  display: flex;
  flex-direction:column;
}
.buttonarea {
  margin-top: 20px;
}
.input-wrap {
  background: #fff;
  border-bottom: 1px solid #eee;
  margin: 0 -12px;
  padding: 0 12px;
  line-height: 46px;
  align-items: center;
}
.input-wrap input{
  height:46px;
}
.info-input {
  font-size: 18px;
  line-height: 46px;
  width: 100%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  height: 44px;
  width: 100%;
  line-height: 44px;
  color: #666;
  border-top: 1px solid #eee;
  background: #fff;
  font-size: 16px;
  text-align: center;
}
.setting {
  color: #1aad19;
  padding: 0 12px;
  position: absolute;
}

.ad{
  margin-top:30px;
}